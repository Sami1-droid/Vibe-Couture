# Common
NODE_ENV=development
APP_NAME=yango-like
PRIMARY_DOMAIN=localhost

# API
API_PORT=4000
API_BASE_URL=http://localhost:4000
JWT_SECRET=replace_with_strong_secret
COOKIE_SECRET=replace_with_cookie_secret
SESSION_COOKIE_NAME=yl_session
SESSION_COOKIE_DOMAIN=localhost
SESSION_COOKIE_SECURE=false

# Database (Postgres)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/yango?schema=public

# Redis
REDIS_URL=redis://localhost:6379

# S3 / Object Storage (use LocalStack in dev)
S3_REGION=us-east-1
S3_BUCKET=yango-private
S3_ENDPOINT=http://localhost:4566
S3_FORCE_PATH_STYLE=true
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test

# Stripe
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PUBLISHABLE_KEY=pk_test_...

# Maps / Routing
OSRM_BASE_URL=http://localhost:5000
MAPBOX_ACCESS_TOKEN=

# Web
WEB_PORT=3000
NEXT_PUBLIC_API_BASE_PATH=/api
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=${STRIPE_PUBLISHABLE_KEY}
NEXT_PUBLIC_MAP_STYLE=https://demotiles.maplibre.org/style.json